{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2020",
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "resolveJsonModule": true,
    "strict": true,
    "types": ["hardhat", "node"],
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["index.ts", "src/**/*", "./hardhat.config.ts"],
  "exclude": ["node_modules", "dist"]
}
